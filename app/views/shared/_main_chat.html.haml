.chat-main
  .group-info
    .group-info__group-box
      .group-info__group-box__group-name
        = @group.name
      .group-info__group-box__member-list
        member :
        - @group.users. each do |user|
          .group-info__group-box__member-list__member
            = user.name
    .group-info__edit
      = link_to "/groups/1/edit", class:"edit-btn" do
        .edit-btn
          Edit
  .messages
    = render @messages
   
  .form
    = form_for [@group, @message] do |f|
      .new-message
        .input-box
          = f.text_field :content, class:"input-box__text", placeholder:"メッセージを入力してください"
          = f.label :image, class:"input-box__image" do
            = icon("fas","image")
            = f.file_field :image, class:"input-box__image__file"
        = f.submit "Send", class:"submit-btn"